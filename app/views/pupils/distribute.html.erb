<% @pupils.each do |pupil| %> 
		<div class="pupil"> 
			<p class="id">Pupil ID: <%= pupil.id %></p> 
			<p class="name">Name of the pupil: <%= pupil.name %></p> 
			<p class="gender">Gender of pupil: <%= pupil.gender %></p> 
			<p class="special">Handicapped?: <%= pupil.special %></p>
			<p class="school">School ID: <%= pupil.school_id %></p>
			<p class="classroom">Classroom ID: <%= pupil.classroom_id %></p> 
			<p class="count">Total number of classrooms: <%= @school.number_of_classrooms %></p>
			<p class="count">Total number of pupils: <%= @total_count %></p> 
			<p class="count">Number of male pupils: <%= @male_pupils %></p> 
			<p class="count">Number of female pupils: <%= @female_pupils %></p> 
			<p class="count">Pupils per classroom: <%= @pupils_per_classroom %></p> 
			<p class="count">Male pupils per classroom: <%= @malePupilsPerClassroom %></p> 
			<p class="count">Female pupils per classroom: <%= @femalePupilsPerClassroom %></p> 

		<%= link_to 'Show Pupil', :controller => :pupils, :action => :show, :school_id => pupil.school_id, :id => pupil.id %>
 	</br>
	<br>	------------------------------------------------------------
		</div> 

		<% end %>
